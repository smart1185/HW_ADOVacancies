<Window x:Class="WPF_VacanciesProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_VacanciesProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu x:Name="MainMenu" Grid.Row="1" Background="Beige">
            <MenuItem x:Name="CategoryMenuItem"  Header="Категории вакансий" Click="CategoryMenuItem_Click"></MenuItem>
            <MenuItem x:Name="SearchMenuItem" Header="Поиск вакансий" Click="SearchMenuItem_Click"></MenuItem>
            <MenuItem x:Name="SettingsMenuItem" Header="Настройки" Click="SettingsMenuItem_Click"></MenuItem>
        </Menu>
        <Frame x:Name="MainFrame" Grid.Row="2" Grid.RowSpan="2" Background="WhiteSmoke"></Frame>
    </Grid>
</Window>
